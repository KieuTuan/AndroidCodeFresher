<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasketballScoreCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DarkText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#111211</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="Score" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#111211</item>
        <item name="android:textSize">70sp</item>
    </style>
    <style name="btnScore" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">#6DBDE1</item>
    </style>
</resources>